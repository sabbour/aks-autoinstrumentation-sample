{
    "compilerOptions": {
      "target": "es2017",
      "module": "node16",
      "moduleResolution": "node",
      "inlineSources": true,
      "sourceMap": true,
      "declaration": true,
      "noImplicitAny": true,
      "outDir": "./out",
      "typeRoots": [
        "./node_modules/@types"
      ]
    },
    "include": [
      "*.ts", "server.ts", "client.ts",
    ],
    "exclude": [
      "node_modules"
    ]
  }
  